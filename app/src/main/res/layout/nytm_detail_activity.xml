<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_nytm_detail"
            android:layout_width="303dp"
            android:layout_height="200dp"
            android:layout_marginStart="@dimen/itemMargin_default"
            android:layout_marginLeft="@dimen/itemMargin_default"
            android:layout_marginTop="@dimen/detailMargin_image"
            android:layout_marginEnd="@dimen/itemMargin_default"
            android:layout_marginRight="@dimen/itemMargin_default"
            android:scaleType="centerCrop"
            app:layout_constraintEnd_toStartOf="@+id/guideline6"
            app:layout_constraintStart_toStartOf="@+id/guideline1"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_nytm_detail_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="@dimen/detailMargin_image"
            android:layout_marginRight="@dimen/detailMargin_image"
            android:layout_marginBottom="@dimen/itemMargin_default"
            android:text="Isadora's Children"
            android:textSize="@dimen/titleLargeSize"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/guideline"
            app:layout_constraintEnd_toEndOf="@+id/iv_nytm_detail"
            app:layout_constraintStart_toStartOf="@+id/iv_nytm_detail"
            app:layout_constraintTop_toBottomOf="@+id/iv_nytm_detail" />

        <ImageView
            android:id="@+id/iv_nytm_detail_favorite"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/ic_star_border"
            app:layout_constraintEnd_toStartOf="@+id/guideline2"
            app:layout_constraintStart_toStartOf="@+id/guideline2"
            app:layout_constraintTop_toBottomOf="@+id/tv_nytm_detail_title" />

        <ImageView
            android:id="@+id/iv_nytm_detail_share"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/ic_share"
            app:layout_constraintEnd_toStartOf="@+id/guideline3"
            app:layout_constraintStart_toStartOf="@+id/guideline3"
            app:layout_constraintTop_toBottomOf="@+id/tv_nytm_detail_title" />

        <TextView
            android:id="@+id/tv_nytm_detail_mpaaRating"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/itemMargin_default"
            android:layout_marginLeft="@dimen/itemMargin_default"
            android:layout_marginTop="@dimen/itemMargin_default"
            android:layout_marginEnd="@dimen/itemMargin_default"
            android:layout_marginRight="@dimen/itemMargin_default"
            android:text="@string/tv_nytm_detail_mpaaRating"
            android:textSize="@dimen/textMediumSize"
            app:layout_constraintEnd_toStartOf="@+id/guideline6"
            app:layout_constraintStart_toStartOf="@+id/guideline1"
            app:layout_constraintTop_toBottomOf="@+id/iv_nytm_detail_favorite" />

        <TextView
            android:id="@+id/tv_nytm_detail_byLine"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/itemMargin_default"
            android:layout_marginLeft="@dimen/itemMargin_default"
            android:layout_marginTop="@dimen/itemMargin_default"
            android:layout_marginEnd="@dimen/itemMargin_default"
            android:layout_marginRight="@dimen/itemMargin_default"
            android:text="@string/tv_nytm_detail_byLine"
            android:textSize="@dimen/textMediumSize"
            app:layout_constraintEnd_toStartOf="@+id/guideline6"
            app:layout_constraintStart_toStartOf="@+id/guideline1"
            app:layout_constraintTop_toBottomOf="@+id/tv_nytm_detail_mpaaRating" />

        <TextView
            android:id="@+id/tv_nytm_detail_headline"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/itemMargin_default"
            android:layout_marginLeft="@dimen/itemMargin_default"
            android:layout_marginTop="@dimen/itemMargin_default"
            android:layout_marginEnd="@dimen/itemMargin_default"
            android:layout_marginRight="@dimen/itemMargin_default"
            android:text="Isadora’s Children’ Review: Variations on Sorrow"
            android:textSize="@dimen/textMediumSize"
            app:layout_constraintEnd_toStartOf="@+id/guideline6"
            app:layout_constraintStart_toStartOf="@+id/guideline1"
            app:layout_constraintTop_toBottomOf="@+id/tv_nytm_detail_byLine" />

        <TextView
            android:id="@+id/tv_nytm_detail_summaryShort"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_marginStart="@dimen/itemMargin_default"
            android:layout_marginLeft="@dimen/itemMargin_default"
            android:layout_marginTop="@dimen/itemMargin_default"
            android:layout_marginEnd="@dimen/itemMargin_default"
            android:layout_marginRight="@dimen/itemMargin_default"
            android:text="The work of a 20th-century dance innovator inspires four women of the present day in this film, composed like a piece of music by Damien Manivel."
            android:textSize="@dimen/textMediumSize"
            app:layout_constraintEnd_toStartOf="@+id/guideline6"
            app:layout_constraintStart_toStartOf="@+id/guideline1"
            app:layout_constraintTop_toBottomOf="@+id/tv_nytm_detail_headline" />

        <TextView
            android:id="@+id/tv_nytm_detail_link"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginStart="@dimen/itemMargin_default"
            android:layout_marginLeft="@dimen/itemMargin_default"
            android:layout_marginTop="8dp"
            android:autoLink="web"
            android:text="@string/tv_nytm_detail_link"
            android:textColor="@color/colorInfoDialog"
            android:textSize="@dimen/textMediumSize"
            app:layout_constraintEnd_toStartOf="@+id/guideline6"
            app:layout_constraintStart_toStartOf="@+id/guideline1"
            app:layout_constraintTop_toBottomOf="@+id/tv_nytm_detail_summaryShort" />

        <TextView
            android:id="@+id/tv_nytm_detail_publicationDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/itemMargin_default"
            android:layout_marginEnd="@dimen/itemMargin_default"
            android:layout_marginRight="@dimen/itemMargin_default"
            android:text="2020-09-02"
            android:textSize="@dimen/textMediumSize"
            app:layout_constraintEnd_toStartOf="@+id/guideline6"
            app:layout_constraintTop_toTopOf="@+id/guideline" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.05" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.35" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.65" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.95" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.4" />


    </androidx.constraintlayout.widget.ConstraintLayout>



</androidx.core.widget.NestedScrollView>